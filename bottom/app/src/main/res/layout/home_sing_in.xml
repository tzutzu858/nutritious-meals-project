<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page2">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/welcome"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            app:srcCompat="@mipmap/welcome" />

        <ImageView
            android:id="@+id/dev_logo"
            android:layout_width="261dp"
            android:layout_height="154dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            app:srcCompat="@mipmap/logo" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="status"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:text="detail"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:text="會員登入"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp" />

        <Button
            android:id="@+id/signInButton"
            style="@style/Base.Widget.AppCompat.Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:alpha="0.77"
            android:background="@android:color/holo_red_light"
            android:drawableLeft="@drawable/common_google_signin_btn_icon_dark_normal"
            android:paddingRight="20dp"
            android:text="Google登入"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="16sp" />

        <Button
            android:id="@+id/signOutButton"
            style="@style/Base.Widget.AppCompat.Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:alpha="0.73"
            android:background="@android:color/holo_blue_dark"
            android:drawableLeft="@mipmap/exit"
            android:paddingLeft="3dp"
            android:paddingRight="20dp"
            android:shadowColor="@color/common_google_signin_btn_text_dark_focused"
            android:text="登出"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="16sp" />

        <Button
            android:id="@+id/disconnectButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@android:color/holo_red_light"
            android:text="disconnect"
            android:visibility="gone" />


        <Button
            android:id="@+id/startButton"
            style="@style/Base.Widget.AppCompat.Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:alpha="0.6"
            android:background="#6DC2B0"
            android:drawableLeft="@mipmap/member4"
            android:drawablePadding="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="10dp"
            android:shadowColor="@color/common_google_signin_btn_text_dark_focused"
            android:text="訪客登入"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="16sp"
            android:visibility="visible" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>